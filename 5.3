#include <stdio.h>

struct Time {
    int hours;
    int minutes;
    int seconds;
};

struct Time getTimePeriod();
struct Time calculateDifference(struct Time t1, struct Time t2);

int main() {
    struct Time startTime, endTime, difference;

    printf("Enter start time:\n");
    startTime = getTimePeriod();

    printf("\nEnter end time:\n");
    endTime = getTimePeriod();

    difference = calculateDifference(startTime, endTime);

    printf("\nTime difference: %d hours, %d minutes, %d seconds\n", difference.hours, difference.minutes, difference.seconds);

    return 0;
}

struct Time getTimePeriod() {
    struct Time t;

    printf("Enter hours: ");
    scanf("%d", &t.hours);

    printf("Enter minutes: ");
    scanf("%d", &t.minutes);

    printf("Enter seconds: ");
    scanf("%d", &t.seconds);

    return t;
}

struct Time calculateDifference(struct Time t1, struct Time t2) {
    struct Time difference;

    int totalSeconds1 = t1.hours * 3600 + t1.minutes * 60 + t1.seconds;
    int totalSeconds2 = t2.hours * 3600 + t2.minutes * 60 + t2.seconds;
    int diffSeconds = totalSeconds2 - totalSeconds1;

    difference.hours = diffSeconds / 3600;
    diffSeconds %= 3600;
    difference.minutes = diffSeconds / 60;
    diffSeconds %= 60;
    difference.seconds = diffSeconds;

    return difference;
}